{
  "name": "@bruhabruh/type-safe",
  "version": "1.2.2",
  "type": "module",
  "description": "BruhaBruh Type Safe Library for TypeScript",
  "author": "BruhaBruh",
  "license": "MIT",
  "keywords": [],
  "repository": {
    "type": "git",
    "url": "https://github.com/bruhabruh/type-safe"
  },
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && vite build",
    "lint": "pnpm run lint:js && pnpm run lint:other",
    "lint:js": "eslint . --report-unused-disable-directives",
    "lint:other": "prettier --check '**/*.{md,yaml,yml,json}'",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "prettier": "prettier '**/*.{md,yaml,yml,json}'",
    "prepare": "husky"
  },
  "dependencies": {
    "type-fest": "^4.37.0"
  },
  "devDependencies": {
    "@bruhabruh/eslint-config": "^1.3.2",
    "@bruhabruh/prettier-config": "^1.1.4",
    "@bruhabruh/tsconfig": "^1.0.4",
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@commitlint/types": "^19.8.0",
    "@types/node": "^22.13.10",
    "eslint": "^9.22.0",
    "glob": "^11.0.1",
    "husky": "^9.1.7",
    "nano-staged": "^0.8.0",
    "prettier": "^3.5.3",
    "rollup-plugin-preserve-directives": "^0.4.0",
    "typescript": "^5.8.2",
    "vite": "^6.2.2",
    "vite-plugin-dts": "^4.5.3",
    "vitest": "^3.0.9"
  },
  "optionalDependencies": {
    "zod": "^3.24.2"
  },
  "nano-staged": {
    "*.{js,ts}": [
      "eslint --fix --quiet --report-unused-disable-directives"
    ],
    "*.{md,yaml,yml,json}": [
      "prettier --write"
    ]
  }
}
